@model List<Feature>
@foreach (var item in Model)
{
    <div class="hero">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-5">
                    <div class="intro-excerpt">
                        <h1><span clsas="d-block">@item.Title</span></h1>
                        <p class="mb-4">@item.Description</p>
                        <p><a href="" class="btn btn-secondary me-2">Tüm Ürünler</a><a href="#" class="btn btn-white-outline">Keşfet</a></p>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="hero-img-wrap">
                        <img src="@item.ImageUrl" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
}
