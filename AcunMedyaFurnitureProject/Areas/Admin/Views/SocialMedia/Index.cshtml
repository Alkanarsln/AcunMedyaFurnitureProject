@model List<SocialMedia>
@{
    ViewData["Title"] = "Sosyal Medya";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ikon</th>
        <th>SosyalMedya Adı</th>
        <th>Url</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Icon</td>
            <td>@item.Name</td>
            <td><img src="@item.Url" /></td>
            <td>
                <button onclick="deleteSocialMedia(@item.SocialMediaID)" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Sil</button>

                <a asp-action="UpdateSocialMedia" asp-controller="SocialMedia" asp-route-id="@item.SocialMediaID" class="btn btn-outline-info"><i class="fas fa-pen"></i> Güncelle</a>
            </td>


        </tr>
    }
</table>
<a asp-action="CreateSocialMedia" asp-controller="SocialMedia" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i> Yeni Sosyal Medya Oluştur</a>

<script>
    function deleteSocialMedia(id) {

        Swal.fire({
            title: "Silmek İstediğinize Emin Misinizi",
            text: "Bu işlemi geri alamazsınız",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/SocialMedia/DeleteSocialMedia/" + id;
            }
        });
    }

</script>
