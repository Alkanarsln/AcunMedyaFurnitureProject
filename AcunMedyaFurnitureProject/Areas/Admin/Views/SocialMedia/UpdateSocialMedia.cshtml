@model SocialMedia
@{
    ViewData["Title"] = "Sosyal Medya Güncelleme Sayfası";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="SocialMediaID" />
    <label>Icon Url</label>
    <input type="text" asp-for="Icon" class="form-control" />
    <br /><br>
    <label>Sosyal Medya Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br /><br />
    <label>Url</label>
    <input type="text" asp-for="Url" class="form-control" />
    <br /><br />
    <button class="btn btn-outline-primary">Güncelle</button>

</form>


