@model List<Subscriber>
@{
    ViewData["Title"] = "Abonelikler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>İsim Soyisim</th>
        <th>Email</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>
                <button onclick="deleteSubscriber(@item.SubscriberID)" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Sil</button>

                <a asp-action="UpdateSubscriber" asp-controller="Subscriber" asp-route-id="@item.SubscriberID" class="btn btn-outline-info"><i class="fas fa-pen"></i> Güncelle</a>
            </td>


        </tr>
    }
</table>

<script>
    function deleteSubscriber(id) {

        Swal.fire({
            title: "Silmek İstediğinize Emin Misinizi",
            text: "Bu işlemi geri alamazsınız",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Subscriber/DeleteSubscriber/" + id;
            }
        });
    }

</script>

