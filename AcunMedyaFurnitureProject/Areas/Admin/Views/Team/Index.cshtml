@model List<Team>
@{
    ViewData["Title"] = "Furniter Ekibi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad Soyad</th>
        <th>Unvan</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Description.Substring(0, 10) ...</td>
            <td>
                <button onclick="deleteTeam(@item.TeamID)" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Sil</button>

                <a asp-action="UpdateTeam" asp-controller="Team" asp-route-id="@item.TeamID" class="btn btn-outline-info"><i class="fas fa-pen"></i> Güncelle</a>
            </td>


        </tr>
    }
</table>
<a asp-action="CreateTeam" asp-controller="Team" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i> Yeni Ekip Arkadaşı Oluştur</a>

<script>
    function deleteTeam(id) {

        Swal.fire({
            title: "Silmek İstediğinize Emin Misinizi",
            text: "Bu işlemi geri alamazsınız",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Team/DeleteTeam/" + id;
            }
        });
    }

</script>
