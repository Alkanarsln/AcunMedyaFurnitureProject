@model List<About>
@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Nicelik1</th>
        <th>Nicelik2</th>
        <th>Nicelik3</th>
        <th>Nicelik4</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Item1</td>
            <td>@item.Item2</td>
            <td>@item.Item3</td>
            <td>@item.Item4</td>
            <td>
                <button onclick="deleteAbout(@item.AboutID)" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Sil</button>

                <a asp-action="UpdateAbout" asp-controller="About" asp-route-id="@item.AboutID" class="btn btn-outline-info"><i class="fas fa-pen"></i> Güncelle</a>
            </td>


        </tr>
    }
</table>
<a asp-action="CreateAbout" asp-controller="About" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i> Yeni Hakkımda Oluştur</a>

<script>
    function deleteAbout(id) {

        Swal.fire({
            title: "Silmek İstediğinize Emin Misinizi",
            text: "Bu işlemi geri alamazsınız",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/About/DeleteAbout/" + id;
            }
        });
    }

</script>
